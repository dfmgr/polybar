[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = "$HOME/polybar/scripts/pavolume.sh" --listen
click-right = exec pavucontrol
click-left = "$HOME/.config/polybar/scripts/pavolume.sh" --togmute
scroll-up = "$HOME/.config/polybar/scripts/pavolume.sh" --up
scroll-down = "$HOME/.config/polybar/scripts/pavolume.sh" --down
format-underline = #3EC13F
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/pub-ip]
type = custom/script
exec = "$HOME/.config/polybar/scripts/pub-ip.sh" 2>/dev/null
interval = 100
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = #FFBB00
label = %output%
format-prefix = "  "
format-prefix-foreground = #FFBB00

[module/release]
type = custom/script
exec = (lsb_release -d | awk {'print $2'} ;echo " "; lsb_release -r | awk {'print $2'}) | tr -d '\n'
interval = 6000

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "  "
format-prefix-foreground = #62FF00
format-underline = #62FF00

